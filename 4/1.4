import React from 'react'
import ReactDOM from 'react-dom'

const Otsikko = (props) => {
    return(
            <h1>{props.kurssi}</h1>
    )
}

const Sisalto = (props) => {
    return(
        <div>
            <Osa n={props.osat[0].nimi} t={props.osat[0].tehtavia} />
            <Osa n={props.osat[1].nimi} t={props.osat[1].tehtavia} />
            <Osa n={props.osat[2].nimi} t={props.osat[2].tehtavia} />
        </div>
    )
}
const Osa = (props) => {
    return(
        <div>
            <p>{props.n}</p>
            <p>{props.t}</p>
        </div>
    )
}
const Yhteensa = (props) => {
    return(
        <div>
            <p>yhteensä {props.osat[0].tehtavia + props.osat[1].tehtavia + props.osat[2].tehtavia}  tehtävää</p>
        </div>
    )
}

const App = (props) => {
    const kurssi = 'Half Stack -sovelluskehitys'
    const osat = [
        {
        nimi: 'Reactin perusteet',
        tehtavia: 10
        },
        {
        nimi: 'Tiedonvälitys propseilla',
        tehtavia: 7
        },
        {
        nimi: 'Komponenttien tila',
        tehtavia: 14
        }
    ]
    
  return (
    <div>
        <Otsikko kurssi={kurssi} />
        <Sisalto osat = {osat}/>
        <Yhteensa osat={osat} />
    </div>
  )
}


ReactDOM.render(<App />,document.getElementById('root')
)
