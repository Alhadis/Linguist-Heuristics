#include "acr_creature_i"
#include "NW_I0_GENERIC"
#include "NW_O2_CONINCLUDE"

////////////////////////////////////////////////////////////////////////////////
// Constants ///////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

int USE_SPECIAL_ABILITY=75;


////////////////////////////////////////////////////////////////////////////////
// Structures //////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Global Variables ////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Prototypes /////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////


void main()
{
	location l;
	int i;
	object o;
	string base="scourge_quest_spawn_0",tag,baserr="010_cr_scourge",rr,s;

	if (!GetLocalInt(OBJECT_SELF,"X2_L_BEH_MAGIC"))	
	{
		SetLocalInt(OBJECT_SELF,"X2_L_BEH_MAGIC",USE_SPECIAL_ABILITY);
	}

	// kludge
	o = GetNearestObjectByTag("fai_scourge_quest_trig");

	if (GetLocalInt(o,"fai_scourge_quest")) {
		DestroyObject(OBJECT_SELF);
		return;
	}

	SetLocalInt(o,"fai_scourge_quest",1);
	
	SetLocalString(OBJECT_SELF,"1","lieutenant");
	SetLocalString(OBJECT_SELF,"2","bandit");
	SetLocalString(OBJECT_SELF,"3","tough");
	SetLocalString(OBJECT_SELF,"4","guarddog");
	SetLocalString(OBJECT_SELF,"5","archer");
	SetLocalString(OBJECT_SELF,"6","wizard");
	SetLocalString(OBJECT_SELF,"7","archer");
		
	ACR_CreatureOnSpawnIn();
	
	for (i=1; i<8; ++i) {
		s = IntToString(i);
		tag = base + s;
		l = GetLocation(GetNearestObjectByTag(tag));
		rr = baserr + GetLocalString(OBJECT_SELF, s);
		CreateObject(OBJECT_TYPE_CREATURE, rr,l);
	}
}
