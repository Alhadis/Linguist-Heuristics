signature StrBldr
    ( Str
    , Bldr

    , fromBuilder
    , toBuilder
    , splitAt
    , null
    , allMatches
    ) where

import Text.Regex.PCRE.Heavy (Regex)
import Prelude hiding (splitAt, null)


data Str
data Bldr

instance Monoid Str
instance Monoid Bldr

toBuilder :: Str -> Bldr
fromBuilder :: Bldr -> Str
splitAt :: Int -> Str -> (Str, Str)
null :: Str -> Bool
allMatches :: Regex -> Str -> [((Int, Int), [(Int, Int)])]
