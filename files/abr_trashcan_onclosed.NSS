//  Description
//  This script calls the ACR's OnClose code for placeables, and sets up a delayed
//   inventory clearing to remove unwanted items.
//
//  Revision History
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Includes ////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

#include "acr_placeable_i"

////////////////////////////////////////////////////////////////////////////////
// Constants ///////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

// number of seconds after closing until the can is cleared.
const float ABR_TRASHCAN_DELAY = 60.0;

////////////////////////////////////////////////////////////////////////////////
// Structures //////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Global Variables ////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Prototypes /////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

//!  Function to loop through and clear the trash can's inventory, abstracted
//!   so it can be wrapped in a DelayCommand.  oCan is the trash container object.
void _emptyTrashCan(object oCan);

// The main event handler.
void main();

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main() {
    ACR_PlaceableOnClose();

    // Custom code goes here.
	DelayCommand(ABR_TRASHCAN_DELAY, _emptyTrashCan(OBJECT_SELF));
	
}


void _emptyTrashCan(object oCan) {

	if (!GetHasInventory(oCan)) { return; }
	
	object oNuke = GetFirstItemInInventory(oCan);
	while (GetIsObjectValid(oNuke)) {
	    DestroyObject(oNuke);
		oNuke = GetNextItemInInventory(oCan);
	}
}